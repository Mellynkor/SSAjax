@model AssignmentM2M.Models.Entities.Store

<div>
    <h4>Store</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StoreCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StoreCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-controller="Store" asp-route-id="@Model!.StoreCode">Edit Store</a> |
    <a asp-action="Register" asp-controller="Item" asp-route-id="@Model!.StoreCode">Add Item</a> |
    <a asp-action="Index">Back to Store List</a>
</div>
<h3>Store Items</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                Item ID
            </th>
            <th>
                Item Name
            </th>
            <th>
                Item Price
            </th>
            <th>
                Operations
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model.StoreItems)
            {
                <tr>
                    <td>
                        @item.Item!.Id
                    </td>
                    <td>
                        @item.Item!.Name
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>  
                        <a asp-action="Update" asp-controller="StoreItem"
                            asp-route-id="@item!.Id">
                            Edit Price
                        </a> |
                        <a asp-action="Remove" asp-controller="StoreItem"
                            asp-route-id="@item!.Id">
                            Remove Item
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
