@model IEnumerable<AssignmentM2M.Models.Entities.Store>


@{
    ViewData["Title"] = ViewData["Message"] ;
}

<h1>@ViewData["Message"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoreCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Count
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            var count = item.StoreItems.Count();
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoreCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => count)
            </td>
        </tr>
}
    </tbody>
</table>
