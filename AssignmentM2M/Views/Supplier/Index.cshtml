@model IEnumerable<AssignmentM2M.Models.Entities.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="jumbotron text-center">
  <h1>Suppliers</h1>
</div>


<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a> | <a  class="btn btn-primary" asp-action="OrderByName">OrderByName</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
               Operations
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SupplierCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SupplierCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SupplierCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
